<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">
        #ID
      </th>
      <th scope="col">
        Title
      </th>
      <th scope="col">
        Price
      </th>
      <th scope="col">
        Image
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
      <tr class="align-middle">
        <th scope="row">
          {{this.id}}
        </th>
        <td>
          {{this.title}}
        </td>
        <td>
          ${{this.price}}
        </td>
        <td>
          <img
            style="height: 4rem"
            class="mh-100"
            src="{{this.thumbnail}}"
            alt="{{this.title}}"
          />
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>